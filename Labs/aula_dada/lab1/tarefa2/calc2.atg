COMPILER Calc2

CHARACTERS
    digito = "0123456789".

TOKENS
    num = digito { digito }.

IGNORE '\t'+'\r'

PRODUCTIONS
    Calc2 = Linha { Linha }.
    Linha = "calc" Exp "\n".
    Exp = Termo { ("+"|"-") Termo }.
    Termo = Fator { ("*"|"/") Fator }.
    Fator = num | "(" Exp ")".

END Calc2.

