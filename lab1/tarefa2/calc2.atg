/* calc 1 + 2 - 5
calc (1+2)*3
calc 13 -  (8)Termo
calc 3
calc 3 + ( 7  */

COMPILER Calc2

CHARACTERES
    digito = "0123456789".
TOKENS 
    num = digito { digito }.

IGNORE '\t' + '\r'

PRODUCTIONS
    Calc2 = Linha { Linha }.
    Linha = "calc" Exp "\n".
    Exp = Termo { ("+"|"-") Termo }.
    Termo = Fator { ("*"|"/") Fator }.
    Fator = num | "(" Exp ")".

END Calc2.
